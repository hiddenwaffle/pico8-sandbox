function new_circle()
  local x = flr(rnd(128))
  local y = flr(rnd(128))
  local valid = true
  for c in all(g.circles) do
    local d = dist_16bit(x, y, c.x, c.y)
    if d < c.r then
      valid = false
      break
    end
  end
  if valid then
    return circle_type:new(x, y)
  else
    return nil
  end
end

-- taken from vector2d lib
function dist_16bit(x1, y1, x2, y2)
  local x1 *= 0.001
  local x2 *= 0.001
  local y1 *= 0.001
  local y2 *= 0.001
  local a = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1))
  return a / 0.001
end

