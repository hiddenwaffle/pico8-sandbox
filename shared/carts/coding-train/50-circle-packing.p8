circle_type =  { }

function circle_type:new(x, y)
  local o = {
    x = x,
    y = y,
    r = 1,
    growing = true
  }
  setmetatable(o, self)
  self.__index = self
  return o
end

function circle_type:grow()
  if self.growing then
    self.r += 1
  end
end

function circle_type:edges()
  return self.x + self.r >= 127 or
         self.x - self.r <    0 or
         self.y + self.r >= 127 or
         self.y - self.r <    0
end

function circle_type:show()
  circ(self.x, self.y, self.r, 7)
end

