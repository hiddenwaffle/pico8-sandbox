function make_walker()
  return {
    x = 64,
    y = 64,
    walk = walker_walk,
    render = walker_render
  }
end

function walker_walk(self)
  local choice = flr(rnd(4))
  if choice == 0 then
    self.x += 1
  elseif choice == 1 then
    self.x -= 1
  elseif choice == 2 then
    self.y += 1
  elseif choice == 3 then
    self.y -= 1
  end
end

function walker_render(self)
  pset(self.x, self.y)
end

